<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/iron"
    tools:context=".feature.payment.PaymentActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/cart_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBlanco"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <include layout="@layout/card_content"
        android:id="@+id/cart"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_alignBottom="@id/card_content"
        android:gravity="center"
        android:layout_below="@+id/card_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/rodape"
        android:padding="10dip"
        tools:ignore="UnknownId">

        <Button
            android:id="@+id/button_payment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_card_compras"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="36dp"
            android:text="\nCOMPRAR"
            android:textColor="@color/album_title"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="498dp" />

        <TextView
            android:id="@+id/textView_total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Subtotal: $123.456,00"
            android:textColor="@color/album_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/carrinho_button"
            app:layout_constraintVertical_bias="0.538" />
    </LinearLayout>
</RelativeLayout>



